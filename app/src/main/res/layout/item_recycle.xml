<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <ImageView
        android:id="@+id/ib_picture"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/custom_rectangle_border_radius"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_photo_camera_24" />

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ib_picture"
        app:layout_constraintTop_toBottomOf="@+id/ib_picture"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grayDark"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/ib_picture"
        app:layout_constraintTop_toBottomOf="@+id/tv_label"
        tools:text="@tools:sample/lorem" />

</androidx.constraintlayout.widget.ConstraintLayout>